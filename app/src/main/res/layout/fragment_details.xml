<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    tools:context=".Details"
    android:id="@+id/Details">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/lab" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="320sp"
            android:fontFamily="sans-serif-black"
            android:text="Labrador Retriever"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="360sp"
            android:text="43 likes    . 13  comments"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400sp"
            android:text="The Labrador Retriever,often abbrevated to Labrador,is a breed of retriever-gun dog from the United Kingdom that was developed from imported Canadian fishing dogs.The Labrador is one of the most popular dog breeds in a number of countries in the worls,particularly in the Western world."
            android:textAlignment="textStart"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="540sp"
            android:text="Posted on:Tue,12.00PM
                                             Author:Mrs.Emilie Lambert"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>