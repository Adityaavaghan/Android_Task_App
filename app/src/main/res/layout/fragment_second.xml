<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="398dp"
            android:layout_height="270dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/lab"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="300sp"
            android:fontFamily="sans-serif-black"
            android:text="Labrador Retriever"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="314dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="43 likes    . 13  comments"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="356dp"
            android:layout_marginTop="330sp"/>


        <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Labrador Retriever,often abbrevated to Labrador,is a breed of retriever-gun dog from the United Kingdom that was developed from imported Canadian fishing dogs.The Labrador is one of the most popular dog breeds in a number of countries in the worls,particularly in the Western world."
        android:textAlignment="textStart"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="395dp"
            android:layout_marginTop="360sp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="490sp"
            android:text="Posted on:Tue,12.00PM
                                             Author:Mrs.Emilie Lambert"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="16sp" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>